        <mapping resource="es/upm/dit/itecban/ad/pbo/dao/hibernate/TipoPoliza.hbm.xml"/>
        <mapping resource="es/upm/dit/itecban/ad/pbo/dao/hibernate/Poliza.hbm.xml"/>
