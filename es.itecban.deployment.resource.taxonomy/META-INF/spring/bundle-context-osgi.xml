<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">
	<bean id="tm"
		class="es.itecban.deployment.resource.taxonomy.DefaultTaxonomyImpl"
		init-method="initTaxonomy">
		<property name="configLocation" value="/etc" />
		<property name="supportedTypes"
			value="/etc/es.itecban.deployment.supportedTypes.properties" />
	</bean>
	<!-- Publish TaxonomyManager as OSGi Services -->
	<osgi:service ref="tm">
	  <osgi:interfaces>
		<value>es.itecban.deployment.resource.taxonomy.TaxonomyValidator</value>
		<value>es.itecban.deployment.resource.taxonomy.TaxonomyManager</value>
	  </osgi:interfaces>
	</osgi:service>	
</beans>